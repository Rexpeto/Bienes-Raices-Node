extends layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    div(class="py-5 space-y-2")
        h1(class="text-center text-2xl font-extrabold") Ubicaci√≥n en el mapa
        
        div(class="flex flex-col md:flex-row items-center py-6 gap-4")
            h2(class="text-sm uppercase text-gray-800 font-bold") Filtrar propiedades:
            
            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="categorias" class="text-sm w-24 uppercase text-gray-500 font-bold") Categorias
                select#categorias(name="categoria" class="bg-white w-full px-3 py-2 border border-gray-300 shadow rounded-md flex-1")
                    option(value="" disabled selected) -Seleccione-
                    each categoria in categorias
                        option(value=categoria.id)= categoria.nombre
                
                label(for="precios" class="text-sm w-24 uppercase text-gray-500 font-bold") Precios
                select#precios(name="precio" class="bg-white w-full px-3 py-2 border border-gray-300 shadow rounded-md flex-1")
                    option(value="" disabled selected) -Seleccione-
                    each precio in precios
                        option(value=precio.id)= precio.nombre  


        div(id="mapa-inicio" class="h-96 rounded")

        section(class="py-5")
            h2(class="text-center font-bold text-2xl pt-10") Casas en ventas
            
            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-5")
                each propiedad in casas 
                    include templates/card


        section(class="py-5")
            h2(class="text-center font-bold text-2xl pt-10") Departamentos en ventas
            
            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-5")
                each propiedad in departamentos 
                    include templates/card
    
block script 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mapaInicio.js") 
