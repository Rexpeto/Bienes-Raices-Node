extends ../layout/admin

block contenido
    h2(class="text-2xl font-extrabold text-center my-10")=pagina

    a(href="/mis-propiedades" class="rounded py-2 bg-indigo-600 text-white hover:bg-indigo-700 cursor-pointer transition-all px-10 text-sm font-bold my-5 inline-block text-center w-full sm:w-auto") Volver

    div(class="mx-auto max-w-6xl bg-white shadow")
        if mensajes.length 
            each mensaje in mensajes 
                li(class="border-gray-200 border-b p-5 list-none")
                    p(class="font-bold text-gray-800") Nombre: 
                        span(class="font-normal")= mensaje.usuario.nombre 

                    p(class="font-bold text-gray-800") Correo: 
                        span(class="font-normal")= mensaje.usuario.email 

                    p(class="font-bold text-gray-800") Mensaje:  
                        span(class="font-normal")= mensaje.mensaje 

                    p(class="font-bold text-gray-800") Enviado:   
                        span(class="font-normal")= mensaje.createdAt 
        else
            p(class="text-xl text-center font-extrabold text-gray-600 p-5") No hay mensajes

