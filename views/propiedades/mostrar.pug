extends ../layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")


block contenido
    //- pre= JSON.stringify(propiedad, undefined, 2)
    div(class="py-8")
        h1(class="text-3xl mt-4 font-extrabold text-center")= propiedad.titulo

        div 
            a(href="#" class="font-bold text-gray-600 text-sm") Categoría: 
                span(class="font-normal")= propiedad.categoria.nombre
        
        div(class="mt-5 md:flex md:gap-4")
            div(class="md:w-2/3 bg-white shadow rounded-lg")
                img(src=`/uploads/${propiedad.imagen}`, alt=propiedad.titulo class="rounded-md")

                div(class="py-10 px-5 space-y-5")
                    p= propiedad.descripcion

                    h2(class="text-xl leading-6 font-bold text-gray-900") Información propiedad

                    div(class="grid grid-cols-1 md:grid-cols-2 gap-2")
                        p(class="text-gray-600 font-bold text-xs") Baños: 
                            span(class="block text-gray-800")= propiedad.wc

                        p(class="text-gray-600 font-bold text-xs") Estacionamientos: 
                            span(class="block text-gray-800")= propiedad.estacionamiento

                        p(class="text-gray-600 font-bold text-xs") Habitaciones: 
                            span(class="block text-gray-800")= propiedad.habitaciones

                        p(class="text-gray-600 font-bold text-xs") Precio: 
                            span(class="block text-gray-800")= propiedad.precio.nombre

            div(class="md:w-1/3 bg-white shadow rounded") 
                h3(class="text-center py-3 leading-6 font-bold text-2xl text-gray-900") Ubicación

                div(class="h-96" id="mapa")
                    p(class="hidden" id="lat")= propiedad.lat
                    p(class="hidden" id="lng")= propiedad.lng

                if propiedad.calle 
                    div(class="p-5 rounded")
                        p(class="text-gray-600 font-bold text-xs") Dirección: 
                            span(id="calle" class="text-gray-900 block text-lg")= propiedad.calle
                else 
                    span(id="calle" class="text-gray-900 block text-lg")= propiedad.calle
block script 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mostrarMapa.js")
