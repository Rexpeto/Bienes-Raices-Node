extends ../layout/admin

block styles
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name="csrf-token" content=csrfToken)

block contenido 
    .py-5 
        h2.text-center.text-2xl.font-extrabold=pagina
    
    if errores
        div(class="max-w-md mx-auto my-10")
            each error in errores
                p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
    
    div(class="bg-white shadow px-4 py-8 rounded mx-auto max-w-4xl my-5 md:px-10")
        form#imagen(method='POST' class="dropzone border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center" action=`/propiedades/agregar-imagen/${propiedad.id}`)

        button#publicar(class="w-full py-2 bg-indigo-600 hover:bg-indigo-700 rounded cursor-pointer text-center text-white uppercase font-bold mt-5") PÃºblicar Propiedad
            
block script 
    script(src="/js/agregarImagen.js") 