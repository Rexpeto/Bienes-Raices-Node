extends ../layout/admin

block contenido 
    .py-5 
        h1.text-4xl.my-8.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold=pagina

        a(href="/propiedad/crear" class="rounded py-2 bg-indigo-600 text-white hover:bg-indigo-700 cursor-pointer transition-all px-10 text-sm font-bold my-5 inline-block text-center w-full sm:w-auto") Públicar Propiedad
    //- pre= JSON.stringify(propiedades, undefined, 2)

    if propiedades.length > 0
        div(class="bg-white shadow rounded-lg")
            ul(class="divide-y divide-gray-200")
                each propiedad in propiedades 
                    li 
                        div(class="p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 md:space-y-0")
                            div(class="sm:w-1/4 md:w-1/6")
                                img(src=`uploads/${propiedad.imagen}` , alt=propiedad.titulo class="w-full block ")
                            div(class="sm:w-2/4 md:w-3/6 lg:w-4/6 space-y-3")
                                a(href="#" class="block text-2xl font-extrabold text-indigo-600 truncate")=propiedad.titulo 

                                p(class="font-bold text-black text-sm")=propiedad.categoria.nombre

                                p(class="font-bold text-gray-500 text-sm flex items-center")
                                    svg(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6")
                                        path(stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z")
                                    =propiedad.precio.nombre

                            div(class="sm:w-1/4 md:w-2/6 lg:flex-1 flex flex-col gap-2 md:flex-row")
                                form(method="POST")
                                    input(type="submit" class=`px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded-sm ${propiedad.publicado ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800'} cursor-pointer w-full` value=`${propiedad.publicado ? 'Publicado' : 'No publicado'}`)

                                a(href="#" class="px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded-sm bg-indigo-100 text-indigo-800 text-center") Editar

                                form(method="POST")
                                    input(type="submit" class=`px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded-sm bg-red-100 text-red-800 cursor-pointer w-full` value='Eliminar')
    else
        p.text-center Aún no tiene propiedades