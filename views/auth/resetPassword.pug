extends ../layout/index

block contenido 
    .py-5 
        h1.text-4xl.my-8.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold=pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-3.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form(method="POST").space-y-5
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block-text-sm-uppercase.text-gray-500.mb-3.font-bold.mt-3(for="password") Password
                        input#password.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400.mt-2(placeholder="Password" type="password" name="password")
                    
                    .flex.items-center.justify-between 
                        p.text-gray-500 ¿Ya recordaste la contraseña?
                            a(href="/auth/login" class="hover:text-gray-700")  Iniciar sesión

                    input(class="w-full bg-indigo-600 text-white cursor-pointer py-2 transition-colors hover:bg-indigo-700" type="submit", value="Guardar Password")